@model Service
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Service Detail</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-10">
                        <label asp-for="Title" class="form-check"></label>
                        <h5>@Model.Title</h5>

                    </div>
                    <div class="mb-10">
                        <label asp-for="Description" class="form-check"></label>
                        <h5>@Model.Description</h5>

                    </div>
                    <a asp-action="Index" class="btn btn-primary">Go Back</a>
                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
